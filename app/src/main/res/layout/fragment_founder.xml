<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.FounderFragment"
    android:background="@drawable/background_layout">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="match_parent"
            android:layout_height="97dp"
            android:layout_marginTop="32dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            app:cardCornerRadius="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.491"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <TextView
                android:id="@+id/txt_nama_founder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageView"
            android:layout_width="113dp"
            android:layout_height="113dp"
            android:layout_marginTop="108dp"
            android:elevation="3dp"
            app:layout_constraintEnd_toEndOf="@+id/cardView"
            app:layout_constraintHorizontal_bias="0.502"
            app:layout_constraintStart_toStartOf="@+id/cardView"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@tools:sample/avatars" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="62dp"
            app:cardCornerRadius="20dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="280dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.491"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardView" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="40dp">

                <TextView
                    android:id="@+id/title_about"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="About"
                    android:textColor="@android:color/black"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginTop="19sp"/>

                <TextView
                    android:id="@+id/desc_about"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Pellentesque non consequat velit, vel feugiat augue. Proin cursus dignissim odio a consequat. "
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    android:layout_marginTop="10sp"
                    android:layout_below="@id/title_about"/>

                <TextView
                    android:id="@+id/title_sosmed"
                    android:layout_below="@id/desc_about"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Social Media"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:layout_marginTop="32dp"
                    android:textColor="@android:color/black"/>

                <TextView
                    android:id="@+id/facebook"
                    android:layout_below="@id/title_sosmed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="fb.com/idn"
                    android:textSize="15sp"
                    android:drawableStart="@drawable/logos_facebook"
                    android:drawablePadding="15sp"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/instagram"
                    android:layout_below="@id/facebook"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="ig.com/smkidn"
                    android:textSize="15sp"
                    android:drawableStart="@drawable/instagram"
                    android:drawablePadding="15sp"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/twitter"
                    android:layout_below="@id/instagram"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="twitter.com/smk_idn"
                    android:textSize="15sp"
                    android:drawableStart="@drawable/logos_twitter"
                    android:drawablePadding="15sp"
                    android:textColor="@android:color/black" />


            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>